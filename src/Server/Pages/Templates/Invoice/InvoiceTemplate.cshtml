 
@model Blanche.Shared.Reservations.ReservationDto
@using MudBlazor;

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link href="css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="css/app.css" rel="stylesheet" />
    <link href="Blanche.Client.styles.css" rel="stylesheet" />
    <link href="/images/BlancheFavicon.png" rel="icon" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css?family=Archivo" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
</head>

<MudContainer>
    <MudPaper Elevation="3" Class="p-4">
        <div class="text-center">
            <h1>Invoice</h1>
        </div>

        <div class="mt-4">
            <div class="mb-2">
                <strong>Reservation ID:</strong> @Model.Id
            </div>
            <div class="mb-2">
                <strong>Start Date:</strong> @Model.StartDate.ToString("MM/dd/yyyy")
            </div>
            <div class="mb-2">
                <strong>End Date:</strong> @Model.EndDate.ToString("MM/dd/yyyy")
            </div>
            <div class="mb-2">
                <strong>Total Price:</strong> $@Model.TotalPrice
            </div>
            <div class="mb-2">
                <strong>Subtotal Price:</strong> $@Model.SubTotalPrice
            </div>
            <div class="mb-2">
                <strong>Confirmed:</strong> @Model.IsConfirmed
            </div>
            <div class="mb-2">
                <strong>Number of Persons:</strong> @Model.NumberOfPersons
            </div>
        </div>

        <div class="mt-4">
            <h2>Customer Information</h2>
            <div class="mb-2">
                <strong>Name:</strong> @Model.Customer.FirstName
            </div>
            <div class="mb-2">
                <strong>Email:</strong> @Model.Customer?.Email
            </div>
            <!-- Add other customer details as needed -->
        </div>

        <div class="mt-4">
            <h2>Reservation Items</h2>
            @if (Model.Items != null && Model.Items.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.QuantityOrdered</td>
                                <td>@item.Price * @item.QuantityOrdered</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No items in the reservation.</p>
            }
        </div>
    </MudPaper>
</MudContainer>